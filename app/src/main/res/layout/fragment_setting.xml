<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.SettingFragment"
    android:paddingStart="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/setting"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewKeluar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="UnusedAttribute"
        app:layout_constraintTop_toTopOf="@id/txtKeluar"
        app:layout_constraintBottom_toBottomOf="@id/txtKeluar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/keluar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_basline_logout"
        app:tint="@color/red"
        app:layout_constraintTop_toTopOf="@id/txtKeluar"
        app:layout_constraintBottom_toBottomOf="@id/txtKeluar"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/setting" />

    <TextView
        android:id="@+id/txtKeluar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/logout"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/setting"
        app:layout_constraintStart_toEndOf="@id/keluar"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>